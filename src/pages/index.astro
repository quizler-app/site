---
import BaseLayout from "../layouts/BaseLayout.astro";
import TopNav from "../components/TopNav.astro";
import Footer from "../components/Footer.astro";
---

<BaseLayout title="Sahil Gupta">

  <TopNav />

  <main>

    <section class="hero">
      <h1>Sahil Gupta</h1>
      <p class="tagline">
        I build products, explore systems, write in public,
        and experiment with ideas that feel slightly unhinged
        (in a good way).
      </p>
    </section>

    <div class="ticker">
      <span>
        Currently thinking about systems design · building sahilgupta.me ·
        writing more in public · fascinated by calm software ·
        experimenting with ideas ·
      </span>
    </div>

    <section class="grid">
      <a href="/writing" class="card">
        <h2>Writing</h2>
        <p>Long-form essays, thinking in public, and ideas I care about.</p>
      </a>

      <a href="/notes" class="card">
        <h2>Notes</h2>
        <p>Short thoughts, half-baked insights, and raw snippets.</p>
      </a>

      <a href="/now" class="card">
        <h2>Now</h2>
        <p>A snapshot of what I’m focused on and learning.</p>
      </a>

      <a href="/projects" class="card">
        <h2>Projects</h2>
        <p>Experiments, tools, and things I’ve built for curiosity.</p>
      </a>
    </section>

    <Footer />

  </main>

</BaseLayout>

<style>
.hero h1 {
  font-size: clamp(3rem, 8vw, 6rem);
  line-height: 1;
  letter-spacing: -0.04em;
  margin-bottom: 1.5rem;
  background: linear-gradient(90deg, var(--text), var(--orange), var(--pink));
  background-size: 200%;
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: titleShift 8s linear infinite;
}

@keyframes titleShift {
  from { background-position: 0%; }
  to { background-position: 200%; }
}

.tagline {
  max-width: 520px;
  font-size: 1.15rem;
  color: var(--muted);
  margin-bottom: 4rem;
}

.ticker {
  overflow: hidden;
  border-top: 1px solid rgba(255,255,255,0.08);
  border-bottom: 1px solid rgba(255,255,255,0.08);
  margin-bottom: 4rem;
  padding: 1rem 0;
  white-space: nowrap;
}

.ticker span {
  display: inline-block;
  padding-left: 100%;
  animation: ticker 45s linear infinite;
  color: var(--muted);
  font-size: 0.95rem;
}

.ticker:hover span {
  animation-play-state: paused;
}

@keyframes ticker {
  from { transform: translateX(0); }
  to { transform: translateX(-100%); }
}

.grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 2.5rem;
  margin-bottom: 6rem;
}

.card {
  padding: 2rem;
  border: 1px solid rgba(255,255,255,0.08);
  background: rgba(255,255,255,0.02);
  text-decoration: none;
  color: var(--text);
  transition: 0.3s;
}

.card:hover {
  transform: translateY(-6px);
  border-color: var(--orange);
}

@media (max-width: 700px) {
  .grid { grid-template-columns: 1fr; }
}
</style>